---
import Layout from '@/layouts/Layout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import ProductHero from '@/components/product/ProductHero.astro';
import ProductGallery from '@/components/product/ProductGallery.astro';
import ProductSpecs from '@/components/product/ProductSpecs.astro';
import ProductFeatures from '@/components/product/ProductFeatures.astro';
import Applications from '@/components/product/Applications.astro';
import RelatedProducts from '@/components/product/RelatedProducts.astro';

const productName = "Tavan Baffle";
const productImages = [
  "/images/products/tavane-metalice.jpg",
  "/images/products/tavane-metalice.jpg",
  "/images/products/tavane-metalice.jpg",
];

const specs = [
  { label: "Material", value: "Aluminiu" },
  { label: "Grosime", value: "0.5 - 1.0 mm" },
  { label: "Lățime", value: "50 - 200 mm" },
  { label: "Lungime", value: "Până la 6000 mm" },
  { label: "Culoare", value: "Diverse opțiuni RAL" },
  { label: "Rezistență la foc", value: "A1" },
];

const features = [
  "Design modern și elegant",
  "Performanță acustică superioară",
  "Ușor de montat",
  "Durabilitate înaltă",
  "Mentenanță minimă",
  "Soluții personalizate disponibile",
];

const applications = [
  "Spații comerciale",
  "Birouri",
  "Săli de conferințe",
  "Restaurante",
  "Hoteluri",
  "Spații retail",
];

const relatedProducts = [
  {
    name: "Tavan Baffle Extrudat",
    description: "Varianta extrudată cu design modern",
    image: "/images/products/tavane-metalice.jpg",
    href: "/produse/tavane-metalice/baffle-linear/tavan-baffle-extrudat",
  },
  {
    name: "Tavan Baffle Vectoral",
    description: "Design vectoral pentru spații moderne",
    image: "/images/products/tavane-metalice.jpg",
    href: "/produse/tavane-metalice/baffle-linear/tavan-baffle-vectoral",
  },
  {
    name: "Baffle Perete",
    description: "Soluție pentru pereți acustici",
    image: "/images/products/tavane-metalice.jpg",
    href: "/produse/tavane-metalice/baffle-linear/baffle-perete",
  },
];
---

<Layout 
  title={productName}
  description={`${productName} - Sistem modern de tavan suspendat pentru interioare comerciale și industriale. Performanță acustică superioară și design elegant.`}
>
  <ProductHero 
    name={productName}
    image={productImages[0]}
    category="Tavane Metalice / Baffle Linear"
  />
  
  <Section padding="lg">
    <Container>
      <Breadcrumb items={[
        { name: 'Acasă', href: '/' },
        { name: 'Produse', href: '/produse' },
        { name: 'Tavane Metalice', href: '/produse/tavane-metalice' },
        { name: 'Baffle/Linear', href: '/produse/tavane-metalice/baffle-linear' },
        { name: productName }
      ]} />
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        <div class="lg:col-span-2">
          <div class="mb-8">
            <h2 class="text-3xl font-semibold mb-4">Descriere</h2>
            <div class="prose prose-lg max-w-none">
              <p>
                Tavanul Baffle este o soluție modernă și elegantă pentru controlul acustic în spații comerciale, 
                birouri și facilități publice. Sistemul oferă performanță acustică superioară prin design-ul său 
                inovator care reduce reverberația și îmbunătățește calitatea sunetului.
              </p>
              <p>
                Produsul este disponibil în diverse dimensiuni și culori, permițând personalizare completă pentru 
                a se potrivi cu designul interior al oricărui proiect.
              </p>
            </div>
          </div>
          
          <div class="mb-8">
            <ProductGallery images={productImages} />
          </div>
        </div>
        
        <div class="space-y-8">
          <ProductSpecs specs={specs} />
          <ProductFeatures features={features} />
        </div>
      </div>
      
      <div class="mb-12">
        <Applications applications={applications} />
      </div>
      
      <div>
        <RelatedProducts products={relatedProducts} />
      </div>
    </Container>
  </Section>
</Layout>

