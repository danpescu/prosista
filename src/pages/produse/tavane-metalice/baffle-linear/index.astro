---
import Layout from '@/layouts/Layout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import ProductCard from '@/components/product/ProductCard.astro';
import productsData from '@/data/products.json';
const products = productsData;
const category = products.categories.find(cat => cat.id === 'tavane-metalice');
const subcategory = category?.subcategories?.find(sub => sub.id === 'baffle-linear');
---

<Layout 
  title="Baffle/Linear - Tavane Metalice"
  description="Sisteme de tavane baffle și linear pentru design modern și performanță acustică superioară."
>
  <Section padding="lg" class="pt-32">
    <Container>
      <Breadcrumb items={[
        { name: 'Acasă', href: '/' },
        { name: 'Produse', href: '/produse' },
        { name: 'Tavane Metalice', href: '/produse/tavane-metalice' },
        { name: 'Baffle/Linear' }
      ]} />
      
      <div class="mb-12">
        <h1 class="mb-4">Baffle/Linear</h1>
        <p class="text-xl text-secondary-600 max-w-3xl">
          Sisteme moderne de tavane suspendate cu design baffle și linear pentru interioare comerciale.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {subcategory?.products.map(product => (
          <ProductCard
            name={product.name}
            description={`Detalii despre ${product.name}`}
            image="/images/products/tavane-metalice.jpg"
            href={`/produse/tavane-metalice/baffle-linear/${product.slug}`}
          />
        ))}
      </div>
    </Container>
  </Section>
</Layout>

