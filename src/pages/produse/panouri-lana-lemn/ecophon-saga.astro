---
import Layout from '@/layouts/Layout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import ProductHero from '@/components/product/ProductHero.astro';
import ProductGallery from '@/components/product/ProductGallery.astro';
import ProductSpecs from '@/components/product/ProductSpecs.astro';
import ProductFeatures from '@/components/product/ProductFeatures.astro';
import Applications from '@/components/product/Applications.astro';
import RelatedProducts from '@/components/product/RelatedProducts.astro';

const productName = "Ecophon Saga";
const productImages = [
  "/images/products/panouri-lana-lemn.jpg",
  "/images/products/panouri-lana-lemn.jpg",
];

const specs = [
  { label: "Material", value: "Lână de lemn" },
  { label: "Densitate", value: "200 - 280 kg/m³" },
  { label: "Grosime", value: "20 - 40 mm" },
  { label: "Dimensiuni", value: "600x600mm, 1200x600mm" },
  { label: "Clasa de reacție la foc", value: "A2-s1, d0" },
  { label: "Coeficient de absorbție acustică", value: "αw 0.85 - 1.00" },
];

const features = [
  "Design modern și elegant",
  "Performanță acustică excelentă",
  "Material ecologic",
  "Ușor de montat",
  "Diverse opțiuni de design",
  "Rezistent la umiditate",
];

const applications = [
  "Spații comerciale",
  "Birouri",
  "Săli de conferințe",
  "Restaurante",
  "Hoteluri",
];

const relatedProducts = [
  {
    name: "Knauf Heradesign",
    description: "Panouri acustice din lână de lemn",
    image: "/images/products/panouri-lana-lemn.jpg",
    href: "/produse/panouri-lana-lemn/knauf-heradesign",
  },
];
---

<Layout 
  title={productName}
  description={`${productName} - Panouri acustice din lână de lemn pentru design natural și performanță acustică superioară.`}
>
  <ProductHero 
    name={productName}
    image={productImages[0]}
    category="Panouri Lână Lemn"
  />
  
  <Section padding="lg">
    <Container>
      <Breadcrumb items={[
        { name: 'Acasă', href: '/' },
        { name: 'Produse', href: '/produse' },
        { name: 'Panouri Lână Lemn', href: '/produse/panouri-lana-lemn' },
        { name: productName }
      ]} />
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        <div class="lg:col-span-2">
          <div class="mb-8">
            <h2 class="text-3xl font-semibold mb-4">Descriere</h2>
            <div class="prose prose-lg max-w-none">
              <p>
                Ecophon Saga este o soluție premium de panouri acustice din lână de lemn, 
                oferind design natural și performanță acustică excepțională.
              </p>
            </div>
          </div>
          
          <div class="mb-8">
            <ProductGallery images={productImages} />
          </div>
        </div>
        
        <div class="space-y-8">
          <ProductSpecs specs={specs} />
          <ProductFeatures features={features} />
        </div>
      </div>
      
      <div class="mb-12">
        <Applications applications={applications} />
      </div>
      
      <div>
        <RelatedProducts products={relatedProducts} />
      </div>
    </Container>
  </Section>
</Layout>

