---
import Layout from '@/layouts/Layout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import CategoryHero from '@/components/product/CategoryHero.astro';
import { CONTACT_INFO } from '@/utils/constants';
---

<Layout 
  title="Contact"
  description="Contactează echipa Prosista România pentru oferte, consultanță sau întrebări despre sistemele noastre de tavane suspendate."
>
  <!-- Hero Section -->
  <CategoryHero 
    title="Contactează-ne"
    breadcrumbs={[
      { name: 'Acasă', href: '/' },
      { name: 'Contact' }
    ]}
  />
  
  <Section padding="lg" class="py-12">
    <Container>
      <div class="max-w-4xl mx-auto">
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
          <!-- Contact Info -->
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-semibold mb-6">Informații de Contact</h2>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <h3 class="font-semibold text-lg mb-1">Adresă</h3>
                    <p class="text-secondary-600">{CONTACT_INFO.address}</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <div>
                    <h3 class="font-semibold text-lg mb-1">Telefon</h3>
                    <a href={`tel:${CONTACT_INFO.phone}`} class="text-primary-600 hover:text-primary-700">
                      {CONTACT_INFO.phoneDisplay}
                    </a>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <div>
                    <h3 class="font-semibold text-lg mb-1">Email</h3>
                    <a href={`mailto:${CONTACT_INFO.email}`} class="text-primary-600 hover:text-primary-700">
                      {CONTACT_INFO.email}
                    </a>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-4 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <div>
                    <h3 class="font-semibold text-lg mb-1">Program</h3>
                    <p class="text-secondary-600">{CONTACT_INFO.workingHours}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div id="form">
            <h2 class="text-2xl font-semibold mb-6">Trimite un Mesaj</h2>
            
            <!-- Success/Error Message -->
            <div id="form-message" class="hidden mb-6 p-4 rounded-lg"></div>
            
            <form 
              action="/send-email.php" 
              method="POST" 
              class="space-y-6"
              id="contact-form"
            >
              <div>
                <label for="name" class="block text-sm font-medium text-secondary-700 mb-2">
                  Nume complet *
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-secondary-700 mb-2">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-secondary-700 mb-2">
                  Telefon *
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  required
                  placeholder="072........."
                  class="w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-secondary-700 mb-2">
                  Mesaj *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required
                  class="w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="btn-contact-submit w-full bg-primary-600 text-white px-8 py-3 rounded-none font-semibold transition-all duration-200 shadow-md hover:shadow-lg relative overflow-hidden"
              >
                <span class="button-overlay-contact absolute inset-0 bg-accent-600"></span>
                <span class="relative z-10">TRIMITE MESAJ</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </Container>
  </Section>
</Layout>

<script>
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton?.textContent;
    
    if (submitButton) {
      const buttonText = submitButton.querySelector('.relative.z-10');
      if (buttonText) {
        buttonText.textContent = 'Se trimite...';
      }
      submitButton.disabled = true;
    }
    
    try {
      const response = await fetch('/send-email.php', {
        method: 'POST',
        body: formData,
      });
      
      let result;
      try {
        const text = await response.text();
        result = text ? JSON.parse(text) : { success: false, message: 'Răspuns invalid de la server' };
      } catch (parseError) {
        result = { success: false, message: 'Eroare la procesarea răspunsului serverului' };
      }
      
      const messageDiv = document.getElementById('form-message');
      
      if (result.success) {
        messageDiv.className = 'mb-6 p-4 rounded-lg bg-green-100 border border-green-400 text-green-700';
        messageDiv.textContent = result.message || 'Mesajul a fost trimis cu succes! Vă vom contacta în cel mai scurt timp.';
        messageDiv.classList.remove('hidden');
        form.reset();
        
        // Scroll to message
        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        
        // Hide message after 5 seconds
        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 5000);
      } else {
        messageDiv.className = 'mb-6 p-4 rounded-lg bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = result.message || 'A apărut o eroare. Vă rugăm să încercați din nou sau să ne contactați direct.';
        messageDiv.classList.remove('hidden');
        
        // Scroll to message
        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    } catch (error) {
      const messageDiv = document.getElementById('form-message');
      messageDiv.className = 'mb-6 p-4 rounded-lg bg-red-100 border border-red-400 text-red-700';
      messageDiv.textContent = 'A apărut o eroare de conexiune. Vă rugăm să verificați conexiunea la internet și să încercați din nou.';
      messageDiv.classList.remove('hidden');
      
      // Scroll to message
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    } finally {
      if (submitButton) {
        const buttonText = submitButton.querySelector('.relative.z-10');
        if (buttonText) {
          buttonText.textContent = 'TRIMITE MESAJ';
        }
        submitButton.disabled = false;
      }
    }
  });
</script>

<style>
  .button-overlay-contact {
    clip-path: inset(100% 0 0 0); /* Start from bottom */
    transition: clip-path 0.4s ease-out;
  }

  .btn-contact-submit:hover .button-overlay-contact {
    clip-path: inset(0% 0 0 0%); /* Expand to full height */
  }
</style>

