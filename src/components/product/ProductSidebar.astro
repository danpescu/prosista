---
interface Props {
  currentProductSlug?: string;
  categorySlug: string;
  categoryProducts?: Array<{
    id: string;
    name: string;
    slug: string;
  }>;
}

const { currentProductSlug, categorySlug, categoryProducts = [] } = Astro.props;
---

<aside class="w-full lg:w-[400px] flex-shrink-0 mb-8 lg:mb-0">
  <div class="bg-secondary-100 p-6">
    <!-- Other Products -->
    {categoryProducts.length > 0 && (
      <>
        <div class="mb-6 flex items-center gap-3">
          <div class="h-0.5 w-8 bg-accent-600"></div>
          <h3 class="text-sm md:text-base font-bold uppercase tracking-wider" style="font-family: 'Mulish', sans-serif; font-weight: 800; font-size: 14px; line-height: 24px; color: rgb(6, 59, 139);">
            ALTE PRODUSE
          </h3>
        </div>
        
        <ul class="space-y-2 mb-6">
          {categoryProducts.map(product => {
            const productHref = categorySlug.includes('/') 
              ? `/produse/${categorySlug}/${product.slug}`
              : `/produse/${categorySlug}/${product.slug}`;
            return (
            <li>
              <a 
                href={productHref}
                class={`sidebar-product-link flex items-center justify-between py-3 px-4 border transition-all duration-200 ${
                  currentProductSlug === product.slug
                    ? 'bg-primary-600 text-white border-primary-600'
                    : 'bg-white border-secondary-300 text-secondary-700 hover:bg-accent-600 hover:text-white hover:border-accent-600'
                }`}
                style="font-family: 'Mulish', sans-serif; font-weight: 500; font-size: 14px; line-height: 24px;"
              >
                <span class="sidebar-link-text">{product.name}</span>
                <svg class="w-5 h-5 flex-shrink-0 ml-2 sidebar-link-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </li>
          )})}
        </ul>
      </>
    )}
    
    <!-- CATALOG Button -->
    <ul class="space-y-2">
      <li>
        <a 
          href="/catalog"
          class="flex items-center justify-between py-3 px-4 bg-white border border-secondary-300 text-secondary-700 hover:bg-accent-600 hover:text-white hover:border-accent-600 transition-all duration-200"
          style="font-family: 'Mulish', sans-serif; font-weight: 700; font-size: 14px; line-height: 24px;"
        >
          <span>CATALOG PRODUSE</span>
          <svg class="w-5 h-5 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </li>
      
      <!-- REFERENCES Button - Blue -->
      <li>
        <a 
          href="/#referinte"
          class="sidebar-references-btn flex items-center justify-between py-3 px-4 bg-primary-600 text-white transition-all duration-200 relative overflow-hidden"
          style="font-family: 'Mulish', sans-serif; font-weight: 700; font-size: 14px; line-height: 24px;"
        >
          <span class="button-overlay-references absolute inset-0 bg-accent-600"></span>
          <span class="relative z-10 flex items-center">
            REFERINȚE
          </span>
          <svg class="w-5 h-5 flex-shrink-0 ml-2 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </li>
      
      <!-- BACK Button - Red -->
      <li>
        <a 
          href={categorySlug.includes('/') ? `/categorii/${categorySlug.split('/')[0]}` : `/categorii/${categorySlug}`}
          class="flex items-center justify-between py-3 px-4 bg-accent-600 text-white hover:bg-accent-700 transition-all duration-200"
          style="font-family: 'Mulish', sans-serif; font-weight: 700; font-size: 14px; line-height: 24px;"
        >
          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            ÎNAPOI
          </span>
          <svg class="w-5 h-5 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</aside>

<style>
  .sidebar-product-link:hover .sidebar-link-text {
    color: white !important;
  }
  
  .sidebar-product-link:hover .sidebar-link-arrow {
    color: white !important;
    transform: translateX(4px);
    transition: transform 0.2s ease-out;
  }
  
  .sidebar-product-link .sidebar-link-arrow {
    transition: transform 0.2s ease-out;
  }
  
  /* References button overlay animation */
  .button-overlay-references {
    clip-path: inset(100% 0 0 0);
    transition: clip-path 0.4s ease-out;
  }
  
  .sidebar-references-btn:hover .button-overlay-references {
    clip-path: inset(0% 0 0 0%);
  }
  
  .sidebar-references-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }
</style>

