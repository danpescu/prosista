---
import ProductCard from '@/components/product/ProductCard.astro';

interface Props {
  products: Array<{ name: string; description: string; image: string; href: string }>;
}

const { products } = Astro.props;
---

<div>
  <h3 class="text-2xl font-semibold mb-6">Produse Conexe</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {products.map(product => (
      <ProductCard
        name={product.name}
        description={product.description}
        image={product.image}
        href={product.href}
      />
    ))}
  </div>
</div>

