---
import { getProductImage, DEFAULT_PRODUCT_IMAGE } from '@/utils/constants';

interface Props {
  name: string;
  description: string;
  image: string;
  href: string;
  categorySlug?: string;
}

const { name, description, image, href, categorySlug } = Astro.props;
const productImage = getProductImage(image, categorySlug);
const defaultImage = DEFAULT_PRODUCT_IMAGE;
---

<a href={href} class="group block bg-white overflow-hidden transition-all duration-300 hover:shadow-lg">
  <div class="relative overflow-hidden" style="width: 396px; height: 248px;">
    <img 
      src={productImage} 
      alt={name}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 ease-out"
      loading="lazy"
      style="width: 396px; height: 248px;"
      onerror={`this.src='${defaultImage}'; this.onerror=null;`}
    />
  </div>
  <!-- Title -->
  <div class="text-center mt-4 mb-2">
    <h3 class="text-base font-semibold uppercase transition-colors duration-200" style="font-family: 'Mulish', sans-serif; font-weight: 800; font-size: 19px; line-height: 23px; color: rgb(6, 59, 139);">
      {name}
    </h3>
  </div>
  <!-- Colored Bar - Red effect from center to edges on hover -->
  <div class="relative h-1 bg-primary-600 group-hover:h-1.5 overflow-hidden">
    <div class="red-bar-effect absolute inset-0 bg-accent-600"></div>
  </div>
</a>

<style>
  .red-bar-effect {
    clip-path: inset(0 50% 0 50%);
    transition: clip-path 0.6s ease-out;
  }
  
  .group:hover .red-bar-effect {
    clip-path: inset(0 0% 0 0%);
  }
</style>

