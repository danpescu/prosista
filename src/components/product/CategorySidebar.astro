---
interface Props {
  currentCategoryId: string;
  allCategories: Array<{
    id: string;
    name: string;
    slug: string;
  }>;
}

const { currentCategoryId, allCategories } = Astro.props;
---

<aside class="w-full lg:w-[400px] flex-shrink-0 mb-8 lg:mb-0">
  <div class="bg-secondary-100 p-6">
    <!-- Title with red line BEFORE -->
    <div class="mb-6 flex items-center gap-3">
      <div class="h-0.5 w-8 bg-accent-600"></div>
        <h3 class="text-sm md:text-base font-bold uppercase tracking-wider" style="font-family: 'Mulish', sans-serif; font-weight: 700; font-size: 19px; line-height: 23px; color: rgb(6, 59, 139);">
          ALTE CATEGORII
        </h3>
    </div>
    
    <ul class="space-y-2">
      {allCategories.map(category => (
        <li>
          <a 
            href={`/categorii/${category.slug}`}
            class="sidebar-category-link flex items-center justify-between py-3 px-4 bg-white border border-secondary-300 text-secondary-700 hover:bg-accent-600 hover:text-white hover:border-accent-600 transition-all duration-200"
            style="font-family: 'Mulish', sans-serif; font-weight: 500; font-size: 16px; line-height: 27px;"
          >
            <span class="sidebar-link-text">{category.name}</span>
            <svg class="w-5 h-5 flex-shrink-0 ml-2 sidebar-link-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </li>
      ))}
      
      <!-- CATALOG Button -->
      <li>
        <a 
          href="/catalog"
          class="flex items-center justify-between py-3 px-4 bg-white border border-secondary-300 text-secondary-700 hover:bg-accent-600 hover:text-white hover:border-accent-600 transition-all duration-200"
          style="font-family: Arial, sans-serif; font-weight: 700; font-size: 14px; line-height: 24px;"
        >
          <span>CATALOG</span>
          <svg class="w-5 h-5 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </li>
      
      <!-- BACK Button - Red -->
      <li>
        <a 
          href="/produse"
          class="flex items-center justify-between py-3 px-4 bg-accent-600 text-white hover:bg-accent-700 transition-all duration-200"
          style="font-family: Arial, sans-serif; font-weight: 700; font-size: 14px; line-height: 24px;"
        >
          <span class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            ÃŽNAPOI
          </span>
          <svg class="w-5 h-5 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</aside>

<style>
  .sidebar-category-link:hover .sidebar-link-text {
    color: white !important;
  }
  
  .sidebar-category-link:hover .sidebar-link-arrow {
    color: white !important;
    transform: translateX(4px);
    transition: transform 0.2s ease-out;
  }
  
  .sidebar-category-link .sidebar-link-arrow {
    transition: transform 0.2s ease-out;
  }
  
</style>

