---
import { getProductImage, DEFAULT_PRODUCT_IMAGE } from '@/utils/constants';

interface Props {
  name: string;
  image: string;
  href: string;
  categorySlug?: string;
}

const { name, image, href, categorySlug } = Astro.props;
const subcategoryImage = getProductImage(image, categorySlug);
const defaultImage = DEFAULT_PRODUCT_IMAGE;
---

<a href={href} class="group block bg-white overflow-hidden transition-all duration-300 hover:shadow-xl border border-secondary-200">
  <div class="relative overflow-hidden aspect-[4/3]">
    <img 
      src={subcategoryImage} 
      alt={name}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
      loading="lazy"
      onerror={`this.src='${defaultImage}'; this.onerror=null;`}
    />
  </div>
  <!-- Title -->
  <div class="text-center py-5 px-4 bg-white">
    <h3 class="text-lg md:text-xl font-semibold transition-colors duration-200 group-hover:text-accent-600" style="font-family: 'Mulish', sans-serif; font-weight: 700; color: rgb(6, 59, 139);">
      {name}
    </h3>
  </div>
</a>

