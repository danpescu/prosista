---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;
---

{href ? (
  <a href={href} class={`block bg-white rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 overflow-hidden ${className}`}>
    <slot />
  </a>
) : (
  <div class={`bg-white rounded-lg shadow-card ${className}`}>
    <slot />
  </div>
)}

