---
interface Props {
  id?: string;
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const { 
  id,
  class: className = '',
  padding = 'lg'
} = Astro.props;

const paddingClasses = {
  sm: 'py-12',
  md: 'py-16',
  lg: 'py-20 md:py-24',
};
---

<section 
  id={id}
  class={`${paddingClasses[padding]} ${className}`}
>
  <slot />
</section>

