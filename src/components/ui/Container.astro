---
interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
}

const { class: className = '', maxWidth = 'xl' } = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-7xl',
  '2xl': 'max-w-screen-2xl',
  full: 'w-full',
};
---

<div class={`${maxWidthClasses[maxWidth]} mx-auto px-4 sm:px-6 lg:px-8 xl:px-12 ${className}`}>
  <slot />
</div>

